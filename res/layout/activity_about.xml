<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="right"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".About" >
    
     <com.mixpanel.src.Font
        android:id="@+id/mixpanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Mixpanel"
        android:textColor="@color/menu4"
        android:textSize="40px" />
     <com.mixpanel.src.Font
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
         android:text="About"
        android:textColor="@color/menu4"
        android:textSize="30px" 
         android:layout_below="@+id/mixpanel" />
        />
     <com.mixpanel.src.Font
       android:id="@+id/aboutview1"
      android:layout_width="fill_parent"     
    android:layout_height="0.5dip"
    android:background="@color/menu1"
    android:layout_below="@+id/about" />
      <com.mixpanel.src.Font
        android:id="@+id/about_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
         android:text="Lorem ipsum dolor sit amet,  tincidunt odio id, ornare ligula. Nulla vel odio lorem. Aliquam et urna est. Praesent blandit ante eget vulputate dictum. Nam quis justo sapien. In eget varius justo, non interdum nisl. Ut elementum tempus mattis. "
         android:textSize="25px" 
         android:layout_below="@+id/aboutview1" />
      <com.mixpanel.src.Font
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
         android:text="Feedback"
        android:textColor="@color/menu4"
        android:textSize="30px" 
         android:layout_below="@+id/about_text" />
        />
       <com.mixpanel.src.Font
       android:id="@+id/Feedback"
      android:layout_width="fill_parent"     
    android:layout_height="0.5dip"
    android:background="@color/menu1"
    android:layout_below="@+id/feedback" />
        />
       
       <EditText
           android:id="@+id/feedback_edit"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/Feedback"
           android:layout_alignRight="@+id/Feedback"
           android:layout_marginTop="6dp"
           android:layout_below="@+id/Feedback"
           android:layout_centerVertical="true"
           android:ems="10"
            android:hint="Enter Feedback"
           android:inputType="textMultiLine" />

       <com.mixpanel.src.Icon_font_button
           android:id="@+id/submit"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:layout_below="@+id/feedback_edit"
             android:background="@android:color/transparent"
             android:text="@string/keyboard"
         android:textSize="60dip" />

        />
      <com.mixpanel.src.Font
        android:id="@+id/credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
         android:text="Credits"
        android:textColor="@color/menu4"
        android:textSize="30px" 
         android:layout_below="@+id/submit" />
        />
     <com.mixpanel.src.Font
       android:id="@+id/credit_view"
      android:layout_width="fill_parent"     
    android:layout_height="0.5dip"
    android:background="@color/menu1"
    android:layout_below="@+id/credit" />
        />
         <com.mixpanel.src.Font
        android:id="@+id/crd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"        
        android:text="@string/crd1"
        android:textColor="#000"
          android:textSize="22dp" 
         android:layout_below="@+id/credit_view" />
        />
        <com.mixpanel.src.Font
        android:id="@+id/crd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"        
        android:text="@string/crd2"
          android:textSize="22dp" 
          android:textColor="#000"
         android:layout_below="@+id/crd1" />
        />
        <com.mixpanel.src.Font
        android:id="@+id/crd3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"        
        android:text="@string/crd3"
          android:textSize="22dp" 
          android:textColor="#000"
         android:layout_below="@+id/crd2" />
        
        <com.mixpanel.src.Font
        android:id="@+id/crd4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"        
        android:text="@string/crd4"
          android:textSize="22dp" 
          android:textColor="#000"
         android:layout_below="@+id/crd3" />
      
        <com.mixpanel.src.Font
        android:id="@+id/crd5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"        
        android:text="@string/crd5"
          android:textSize="22dp" 
          android:textColor="#000"
         android:layout_below="@+id/crd4" />
       
          <com.mixpanel.src.Icon_font
        android:id="@+id/share_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
         android:text="@string/share"
        android:textColor="@color/menu4"
        android:textSize="30px" 
       android:layout_below="@+id/crd5"/>
        
         <com.mixpanel.src.Icon_font
        android:id="@+id/rate_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
         android:text="@string/rate"
        android:textColor="@color/menu4"
        android:textSize="30px" 
        android:layout_below="@+id/share"/>

         <com.mixpanel.src.Font
             android:id="@+id/rate"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/rate_icon"
             android:layout_alignBottom="@+id/rate_icon"
             android:layout_alignRight="@+id/mixpanel"
             android:layout_toRightOf="@+id/rate_icon"
             android:text="Rate this app"
              android:layout_marginLeft="10dip"
             
             android:textColor="@color/menu4"
             android:textSize="30px" />

         <com.mixpanel.src.Font
             android:id="@+id/share"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/share_icon"
             android:layout_alignBottom="@+id/share_icon"
             android:layout_alignRight="@+id/mixpanel"
             android:layout_toRightOf="@+id/rate_icon"
             android:text="Share with friends"
              android:layout_marginLeft="10dip"
             
             android:textColor="@color/menu4"
             android:textSize="30px" />
       
    </RelativeLayout>
    </ScrollView>