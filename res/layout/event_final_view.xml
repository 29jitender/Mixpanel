<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp" 
        android:layout_margin="4dip"
        android:id="@+id/relativeLayout_eventfinal">
        <com.echo.holographlibrary.LineGraph
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"
        android:layout_weight="0.74"/>
       <!-- android:background="@drawable/graphbg" -->  
    </RelativeLayout>
 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp" 
        android:layout_margin="4dip"
        android:visibility="gone"
        android:id="@+id/relativeLayout_nill">
      <TextView
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Value to Plot Graph"
            android:textColor="#2447ff"
            android:textSize="40dip"
            android:layout_marginLeft="16dip"
            android:textAppearance="?android:attr/textAppearanceLarge" />   
    </RelativeLayout>
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      >

        <com.mixpanel.src.Font
            android:id="@+id/event_activity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Output text"
            android:textColor="#4d3131"
            android:textSize="25dip"
            android:layout_marginLeft="16dip"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dip"
         android:divider="@android:color/transparent"
  android:dividerHeight="17.0sp" >
    </ListView>
    
</LinearLayout>